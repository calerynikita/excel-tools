<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.excelinsight.mapper.ExcelFileMapper">

    <resultMap id="BaseResultMap" type="com.excelinsight.entity.ExcelFile">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="file_name" property="fileName" jdbcType="VARCHAR"/>
        <result column="original_file_name" property="originalFileName" jdbcType="VARCHAR"/>
        <result column="file_path" property="filePath" jdbcType="VARCHAR"/>
        <result column="file_size" property="fileSize" jdbcType="BIGINT"/>
        <result column="file_type" property="fileType" jdbcType="VARCHAR"/>
        <result column="upload_time" property="uploadTime" jdbcType="TIMESTAMP"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, file_name, original_file_name, file_path, file_size, file_type, 
        upload_time, status, create_time, update_time
    </sql>

    <insert id="insert" parameterType="com.excelinsight.entity.ExcelFile" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO excel_file (
            file_name, original_file_name, file_path, file_size, file_type, 
            upload_time, status, create_time, update_time
        ) VALUES (
            #{fileName}, #{originalFileName}, #{filePath}, #{fileSize}, #{fileType}, 
            #{uploadTime}, #{status}, NOW(), NOW()
        )
    </insert>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM excel_file
        WHERE id = #{id}
    </select>

    <select id="selectByFileName" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM excel_file
        WHERE file_name = #{fileName}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM excel_file
        ORDER BY create_time DESC
    </select>

    <select id="selectByStatus" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM excel_file
        WHERE status = #{status}
        ORDER BY create_time DESC
    </select>

    <update id="updateStatus">
        UPDATE excel_file
        SET status = #{status}, update_time = NOW()
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM excel_file WHERE id = #{id}
    </delete>

    <delete id="deleteExpiredFiles" parameterType="java.lang.Integer">
        DELETE FROM excel_file 
        WHERE status = #{status} 
        AND create_time &lt; DATE_SUB(NOW(), INTERVAL 24 HOUR)
    </delete>

</mapper> 